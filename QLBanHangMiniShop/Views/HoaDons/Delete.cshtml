@model QLBanHangMiniShop.Models.HoaDon

@{
    string actionNamePostTable = @"../HoaDons/DanhSachDonHang/";
    string parameterPostTable = @"?indexPage=0";
    string idElement = "hoadon-" + @Model.ID.ToString();
    string actionNameListPage = @"../HoaDons/ListPagePost"+ViewBag.TrangThai;
}
<div class="card card-primary">
    <div class="card-header" style="background-color:#0094ff">
        <h2 class="card-title">@ViewBag.Title</h2>
        <div style="float:right">
            <button class="closePopUp btn btn-danger"
                    style="color:white"
                    onclick="ClosePopUp()">
                X
            </button>
        </div>
    </div>
    <div class="card-body">

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4> Đơn hàng-@Model.ID </h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.NgayDatHang)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NgayDatHang)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.HoTenKhach)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HoTenKhach)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DiaChi)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DienThoai)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DienThoai)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TongTien)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TongTien)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TrangThai)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TrangThai)
                </dd>

            </dl>


            @using (Ajax.BeginForm(new AjaxOptions
            {
                HttpMethod = "Post",
                InsertionMode = InsertionMode.InsertAfter,
                UpdateTargetId = "tableBody",
                OnSuccess = $"DeleteResult('{idElement}','{actionNamePostTable}'" +
                $",'{parameterPostTable}','{actionNameListPage}')",
            }))
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>

</div>

