@model QLBanHangMiniShop.Models.ChungLoai

@{ 
    string actionNamePostTable = @"../ChungLoais/DanhSachChungLoai/";
    string parameterPostTable = @"?indexPage=0";
    string idElement = "chungloai-"+@Model.ID.ToString();
    string actionNameListPage = @"../ChungLoais/ListPagePost";
}
<div class="card card-primary">
    <div class="card-header" style="background-color:#0094ff">
        <h2 class="card-title">@ViewBag.Title</h2>
        <div style="float:right">
            <button class="closePopUp btn btn-danger"
                    style="color:white"
                    onclick="ClosePopUp()">
                X
            </button>
        </div>
    </div>
    <h3 style="color:red">Are you sure you want to delete this?</h3>
    <div class="card-body">
        <div>


            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Ten)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ten)
                </dd>

            </dl>

            @using (Ajax.BeginForm(new AjaxOptions
            {
                HttpMethod = "Post",
                InsertionMode = InsertionMode.InsertAfter,
                UpdateTargetId = "tableBody",
                OnSuccess = $"DeleteResult('{idElement}','{actionNamePostTable}'" +
                $",'{parameterPostTable}','{actionNameListPage}')",
            }))
            {
                <div class="form-actions no-color">
                    <input class="btn btn-danger" style="color:white" type="submit" value="sumit">
                </div>
            }
        </div>
    </div>
</div>





