    </td>
    <td style="border:2px solid black">
        <a class="btn btn-warning"
           name="LoadPopUp"
           id="/SanPhams/Edit/@Model.ID">
            Edit
        </a>
        <a class="btn btn-danger"
           name="LoadPopUp"
           id="/SanPhams/Delete/@Model.ID">
            Delete
        </a>
    </td>
}



