
@model HangHoa
@if (ViewBag.CRUD == "delete")
{
    <tr style="border:0.2em solid black" id="sp-@Model.ID">
        <td style="border:2px solid black">
            @Html.DisplayFor(modelItem => Model.MaSo)
        </td>
        <td>@Model.Loai.Ten</td>
        <td style="border:2px solid black">
            <a href="#" name="LoadPopUp"
               id="/SanPhams/Details/@Model.ID">
                @Html.DisplayFor(modelItem => Model.Ten)
            </a>
        </td>
        <td style="border:2px solid black">
            @Html.DisplayFor(modelItem => Model.GiaBan)
        </td>
        <td style="border:2px solid black">
            <a class="btn btn-warning"
               name="LoadPopUp"
               id="/SanPhams/Edit/@Model.ID">
                Edit
            </a>
            <a class="btn btn-danger"
               name="LoadPopUp"
               id="/SanPhams/Delete/@Model.ID">
                Delete
            </a>
        </td>
    </tr>
}
@if (ViewBag.CRUD == "edit")
