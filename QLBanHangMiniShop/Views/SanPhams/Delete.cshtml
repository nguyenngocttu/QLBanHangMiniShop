@model QLBanHangMiniShop.Models.HangHoa

@{
    string actionNamePostTable = @"../SanPhams/DanhSachSanPham/";
    string parameterPostTable = @"?indexPage=0";
    string idElement = "sp-" + @Model.ID.ToString();
    string actionNameListPage = @"../SanPhams/ListPagePost";
}
<div class="card card-primary">
    <div class="card-header" style="background-color:#0094ff">
        <h2 class="card-title">@ViewBag.Title</h2>
        <div style="float:right">
            <button class="closePopUp btn btn-danger"
                    style="color:white"
                    onclick="ClosePopUp()">
                X
            </button>
        </div>
    </div>

    <div class="card-body">
        <h3 style="color:red">Are you sure you want to delete this?</h3>
        <div>
            <h4>HangHoa</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.MaSo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MaSo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ten)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ten)
                </dd>



                <dt>
                    @Html.DisplayNameFor(model => model.TenHinh)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenHinh)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.GiaBan)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GiaBan)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Loai.MaSo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Loai.MaSo)
                </dd>

            </dl>

            @using (Ajax.BeginForm(new AjaxOptions
            {
                HttpMethod = "Post",
                InsertionMode = InsertionMode.InsertAfter,
                UpdateTargetId = "tableBody",
                OnSuccess = $"DeleteResult('{idElement}','{actionNamePostTable}'" +
                        $",'{parameterPostTable}','{actionNameListPage}')",
            }))
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                </div>
            }
        </div>
    </div>
</div>




